    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {}
  },
  "build": {
    "appId": "com.smallworldsx.client",
    "productName": "SmallWorlds",
    "mac": {
      "category": "public.app-category.developer-tools",
