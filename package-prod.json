{
  "name": "smallworlds",
  "productName": "SmallWorlds",
  "description": "SmallWorlds",
  "version": "1.0.0",
  "author": "BoarHat Games",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder ",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder build",
    "publish": "electron-builder --mac --win --linux -p always"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.25.1",
    "base-64": "^1.0.0",
    "core-js": "^3.35.1",
    "discord-rpc-revamp": "^2.0.4",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "4.3.9",
    "json-server": "1.0.0-alpha.22"
    },
  "devDependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "electron": "11.0.0",
    "electron-builder": "^24.12.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {}
  },
  "build": {
    "appId": "com.smallworlds.client",
    "productName": "SmallWorlds",
    "mac": {
      "category": "public.app-category.developer-tools",
      "type": "distribution"
    },
    "publish": {
      "provider": "github"
    },
    "extraResources": [
    {
      "from": "plugins/",
        "to": "../plugins/"
    }]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boarhatgames/client.git"
  }
}
